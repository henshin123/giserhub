<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.giserhub.filter.EncodingFilter</filter-class><!--全路径，从根路径包含到类名-->
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern><!--这里是过滤全部的servlet-->
    </filter-mapping>

    <servlet><!--配置Servlet的路由-->
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.giserhub.servlet.loginServlet</servlet-class>
    </servlet>


    <servlet-mapping><!--配置Servlet的映射关系-->
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/giserhub/jsp/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>